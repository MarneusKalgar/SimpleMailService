.page
	padding 0
	margin 0
	min-width 69rem
	font 1rem 'Helvetica Neue', Arial, sans-serif
	
.container
	width 100%
	padding 0

.page-header
	display flex
	justify-content space-between
	align-items center
	margin 0
	padding 2em
	background-color #F9F6F6
	&__text
		margin 0
		font-size 1.8em
		color #33B0D9
		text-shadow .05em .05em .1em darken(#F9F6F6,40%)
.logo
	width 10em
	height 4em
	&__img
		display inline-block
		margin-right 1em
		width 3em
		height auto

.main
	display flex
	justify-content center
	align-items stretch
	
.flex-item
	width 85%
	
.sidebar
	display flex
	justify-content flex-start
	flex-flow column
	align-items center
	width 15%
	min-height 100%
	padding-top 2em
	background-color #54525C


/***************************************/	
/* block inbox
/***************************************/	
.inbox
	width 100%
	min-height 30em
	position relative
	&__title
		margin 0
		padding 1em 0 0 1em
		color #fff
		background-color #938E8E
	&__count
		padding 1em
		color #fff
		background-color #938E8E
	&__search
		color #000
	&__search-field
		display block
		width 20em
		height 2em
		padding-left .5em
		border none
		border-radius .2em
	&__list
		margin 0
		padding 0
		list-style none
	&__message
		display flex
		justify-content center
		align-items center
		padding 1.5em 1em 1.5em 0
		border-bottom 0.1em solid #8E8888
		transition all 0.2s ease-in 0.1s
		&:last-child
			border-bottom none
		&:nth-child(odd)
			background-color #EEECEC
		&:nth-child(even)
			background-color lighten(#EEECEC, 25%)
		&:hover
			background-color darken(#EEECEC, 10%)
	&__info
		display flex
		justify-content flex-start
		align-items center
		margin 0
		padding 0
		width 85%
		list-style none
	&__elem
		margin-right 1em
		flex 2
		&:nth-child(1)
			flex 1
			margin 0
		&:nth-child(3)
			flex 6
		&:last-child
			flex 1
			
	&__action-bar
		position absolute
		display flex
		justify-content flex-end
		align-items center
		right 0
		top 6.2em
		padding 0 1.5em
		margin 0
		list-style none

	&__actions
		margin-left 1em
		
	&__message--not-read
		.inbox__elem--subj
			font-weight bold
	&__message--read
		.inbox__elem--subj
			font-weight normal
			&:after
				display inline-block
				margin-left .5em
				content 'READ'
				color lighten(#000, 50%)


/***************************************/	
/* block email
/***************************************/	
.email
	margin 0
	min-height 45em
	&__info
		display flex
		flex-flow column
		justify-content flex-start
		align-items flex-start
		min-height 45em
		list-style none
		margin 0
		padding 0 2em 1em
		background-color #EEECEC
	&__elem
		margin-top 1em
		line-height 1.5em
		&:first-child
			font-weight bold
		&--reply
			width 80%
			height 7em
	&__reply-area
		display block
		width 100%
		height 100%
		padding .3em
		margin-bottom 1em
		font 1rem 'Helvetica Neue', Arial, sans-serif
		
/***************************************/	
/* block write
/***************************************/
.write
	padding 1.5em
	min-height 30em
	background-color #EEECEC
	&__title
		margin 0 0 1em
	&__form
		width 60%
	&__label
		display inline-block
		width 10%
		margin-top 1em
	&__input
		display inline-block
		height 2em
		width 70%
		margin-right 10%
	&__text-area
		display block
		margin 1em 10% 0 5.15em
		width 70%
		height 10em
		font 1rem 'Helvetica Neue', Arial, sans-serif


/***************************************/	
/* block page-footer
/***************************************/
.page-footer
	margin 0
	padding 1em
	background-color #F9F6F6
	&__text
		font-size 0.875em
		text-align center

/***************************************/	
/* btn
/***************************************/
.btn
	display inline-block
	padding .5em
	background-color #33B0D9
	border-radius .5em
	cursor pointer
	font-size 1em
	color #fff
	text-decoration none
	letter-spacing .1em
	transition all 0.2s ease-in 0.1s
	&:hover
	&:focus
		background-color darken(#33B0D9, 20%)
	&:active
		box-shadow inset .1em .1em .1em rgba(#000, .5), inset -.1em -.1em .1em rgba(#000, .5)
		outline none
	
	&--write
		font-size 1.1em
		letter-spacing .1em
		font-weight bold
		text-transform uppercase
		color #3B3939
		background-color #CBD4C9
		border-radius .2em
		&:hover
		&:focus
			background-color darken(@background-color, 20%)
			
	&--action
		margin-right .5em
		border none
		outline none
		background-color #272424
		&:hover
		&:focus
			background-color lighten(@background-color, 30%)
			
	&--send
		display inline-block
		border none
		outline none
		margin 1em 0 0 5.2em