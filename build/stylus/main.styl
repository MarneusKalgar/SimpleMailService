@import 'https://fonts.googleapis.com/css?family=Lato:400,700'

/*********************** PAGE ***********************/
.page
	padding 0
	margin 0
	min-width 87.5rem
	font 1rem 'Lato', Arial, sans-serif

/*********************** CONTAINER ***********************/	
.container
	width 100%
	padding 0

/*********************** PAGE-HEADER ***********************/
.page-header
	box-sizing border-box
	display flex
	justify-content space-between
	align-items center
	min-height 7rem
	height 15vh
	margin 0
	padding 2em
	background-color #F9F6F6
	&__text
		margin 0
		font-size 1.8em
		color #33B0D9
		text-shadow .05em .05em .1em darken(#F9F6F6,40%)

/*********************** LOGO ***********************/
.logo
	width 11em
	height 3em
	&__img
		display inline-block
		margin-right 1em
		width 3em
		height auto

/*********************** MAIN-NAV ***********************/		
.main-nav
	margin 0
	&__action-bar
		display flex
		justify-content center
		align-items center
		padding 0
		margin 0
		list-style none
		
/*********************** MAIN ***********************/
.main
	display flex
	justify-content center
	align-items stretch

/*********************** FLEX-ITEM ***********************/	
.flex-item
	width 85%
	height 100%

/*********************** SIDEBAR ***********************/	
.sidebar
	display flex
	justify-content flex-start
	flex-flow column
	align-items center
	width 15%
	padding-top 2em
	background-color #54525C


/*********************** MAIL ***********************/
.mail
	width 100%
	position relative
	margin 0
	padding 0
		
	&__title
		margin 0
		padding 1em 0 0 1em
		color #fff
		background-color #938E8E
		
	&__count
		padding 1em
		color #fff
		background-color #938E8E
		
	&__search
		color #000
		
	&__search-field
		display block
		width 20em
		height 2em
		padding-left .5em
		border none
		border-radius .2em
		
	&__list
		margin 0
		padding 0
		list-style none
		
	&__message
		display flex
		justify-content center
		align-items center
		padding 1.5em 2em
		border-bottom 0.1em solid #8E8888
		transition all 0.1s ease-in 0.1s
		&:last-child
			border-bottom none
		&:nth-child(odd)
			background-color #fff
		&:nth-child(even)
			background-color darken(#fff, 5%)
		&:hover
			background-color darken(#fff, 20%)
			
	&__info
		display flex
		justify-content flex-start
		align-items center
		margin 0
		padding 0
		width 85%
		list-style none
		
	&__elem
		margin-right 1em
		flex 2
		&:nth-child(1)
			flex 1
		&:nth-child(3)
			flex 6
		&:last-child
			flex 1
			
	&__actions
		margin-left 1em
			
	&__elem--subj
		font-weight bold


/*********************** EMAIL ***********************/
.email
	margin 0
	min-height 45em
	
	&__info
		display flex
		flex-flow column
		justify-content flex-start
		align-items flex-start
		min-height 45em
		list-style none
		margin 0
		padding 0 2em 1em
		background-color #EEECEC
		
	&__elem
		margin-top 1em
		line-height 1.5em
		&:first-child
			font-weight bold
		&--reply
			width 80%
			height 7em
			
	&__reply-area
		display block
		width 100%
		height 100%
		padding .5em
		margin-bottom 1em
		font 1rem 'Lato', Arial, sans-serif

		
/*********************** WRITE ***********************/
.write
	padding 1.5em
	min-height 30em
	background-color #EEECEC
	
	&__title
		margin 0 0 1em
		
	&__form
		width 60%
		
	&__label
		display inline-block
		width 10%
		margin-top 1em
		
	&__input
		display inline-block
		height 2em
		width 70%
		margin-right 10%
		
	&__text-area
		display block
		margin 1em 10% 0 5.15em
		width 70%
		height 10em
		font 1rem 'Lato', Arial, sans-serif


/*********************** PAGE-FOOTER ***********************/
.page-footer
	height 3.5rem
	margin 0
	background-color #F9F6F6
	
	&__text
		height @height
		margin 0
		line-height @height
		font-size 0.875em
		text-align center

/*********************** BTN ***********************/
.btn
	display inline-block
	padding .5em
	background-color #33B0D9
	border-radius .5em
	cursor pointer
	font-size 1em
	color #fff
	text-decoration none
	letter-spacing .1em
	transition all 0.2s ease-in 0.1s
	&:hover
	&:focus
		background-color darken(#33B0D9, 20%)
	&:active
		box-shadow inset .1em .1em .1em rgba(#000, .5), inset -.1em -.1em .1em rgba(#000, .5)
		outline none
	
	&--write
		font-size 1.1em
		letter-spacing .1em
		font-weight bold
		text-transform uppercase
		color #3B3939
		background-color #CBD4C9
		border-radius .2em
		&:hover
		&:focus
			background-color darken(@background-color, 20%)
			
	&--action
		margin-right .5em
		border none
		outline none
		background-color #272424
		&:hover
		&:focus
			background-color lighten(@background-color, 30%)
			
	&--send
		display inline-block
		border none
		outline none
		margin 1em 0 0 5.2em